Date: Wed, 4 Feb 2026 08:25:51 +0200
Subject: [PATCH 03/33] Add files via upload

---
 Dockerfile | 12 +++++++-----
 1 file changed, 7 insertions(+), 5 deletions(-)

diff --git a/Dockerfile b/Dockerfile
index 927dd2b916c..64b0ce1cbf0 100644
--- a/Dockerfile
+++ b/Dockerfile
@@ -1,10 +1,11 @@
+# Moodle running on Apache + PHP 8.1 (supported)
 FROM php:8.1-apache
 
-# Make sure only one MPM is enabled
+# Make sure only one MPM is loaded + enable rewrite
 RUN a2dismod mpm_event mpm_worker || true \
  && a2enmod mpm_prefork rewrite
 
-# Install required libs ONLY (not apache2)
+# Install dependencies (no extra apache packages here)
 RUN apt-get update && apt-get install -y \
     git \
     unzip \
@@ -19,14 +20,15 @@ RUN apt-get update && apt-get install -y \
     libpq-dev \
     libldap2-dev \
  && docker-php-ext-configure gd --with-freetype --with-jpeg \
- && docker-php-ext-install gd intl xml zip mbstring curl pdo_pgsql ldap opcache \
+ && docker-php-ext-install gd intl xml zip mbstring curl pdo_mysql pdo_pgsql ldap opcache \
  && rm -rf /var/lib/apt/lists/*
 
-# Copy Moodle
+# Copy Moodle into the container
 COPY . /var/www/html
 
-# Create moodledata (will be overridden by Railway volume but keeps perms right)
+# Create moodledata and fix permissions
 RUN mkdir -p /var/www/moodledata \
  && chown -R www-data:www-data /var/www/html /var/www/moodledata
 
+# Expose Apache port
 EXPOSE 80
